@{
    ViewData["Title"] = "Validación";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card-custom text-center">
            <div class="mb-4 text-primary">
                <i class="fas fa-id-card fa-3x"></i>
            </div>

            <h3 class="fw-bold mb-3">Verificar Estudiante</h3>
            <p class="text-muted mb-4">Ingresa el número de cédula para consultar la base de datos académica.</p>

            <form action="/Apoyo/ValidarCedula" method="post">
                <div class="input-group mb-3">
                    <input type="text" name="cedula" class="form-control form-control-lg text-center" placeholder="Ej: 1720000000" required maxlength="10">
                    <button class="btn btn-uisek" type="submit">Consultar</button>
                </div>
            </form>
        </div>
    </div>
</div>