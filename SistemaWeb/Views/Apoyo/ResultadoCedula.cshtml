@model SistemaWeb.Models.ValidacionCedulaResult

@{
    ViewData["Title"] = "Resultado";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card-custom text-center border-top border-5 @(Model.EsValida ? "border-success" : "border-danger")">

            <div class="mt-3 mb-4">
                @if (Model.EsValida)
                {
                    <div class="text-success animate__animated animate__bounceIn">
                        <i class="fas fa-check-circle fa-4x"></i>
                    </div>
                    <h2 class="fw-bold mt-3 text-success">Estudiante Verificado</h2>
                }
                else
                {
                    <div class="text-danger animate__animated animate__shakeX">
                        <i class="fas fa-times-circle fa-4x"></i>
                    </div>
                    <h2 class="fw-bold mt-3 text-danger">No Encontrado</h2>
                }
            </div>

            <p class="fs-5 text-dark">@Model.Mensaje</p>

            <div class="mt-4">
                <a asp-action="ValidarCedula" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Nueva Consulta
                </a>
            </div>
        </div>
    </div>
</div>