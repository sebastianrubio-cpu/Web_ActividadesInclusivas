@model IEnumerable<SistemaWeb.Models.Actividad>
@{
    ViewData["Title"] = "Gestión de Actividades";
}

<style>
    /* 1. Quitamos los iconos por defecto de DataTables */
    table.dataTable thead .sorting,
    table.dataTable thead .sorting_asc,
    table.dataTable thead .sorting_desc {
        background-image: none !important; /* Elimina flechas default */
        position: relative;
        cursor: pointer;
        padding-right: 20px !important; /* Espacio para nuestras flechas */
    }

    /* 2. Definimos la posición común para ambas flechas usando pseudo-elementos */
    table.dataTable thead th::before,
    table.dataTable thead th::after {
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        position: absolute;
        right: 10px;
        font-size: 0.8rem;
        transition: color 0.2s;
    }

    /* --- FLECHA ARRIBA (::before) --- */
    table.dataTable thead th::before {
        content: "\f0d8"; /* Código FontAwesome Caret Up */
        top: 30%; /* Posición superior */
        color: #ccc; /* Gris por defecto (Inactivo) */
    }

    /* --- FLECHA ABAJO (::after) --- */
    table.dataTable thead th::after {
        content: "\f0d7"; /* Código FontAwesome Caret Down */
        top: 45%; /* Posición inferior (apilada) */
        color: #ccc; /* Gris por defecto (Inactivo) */
    }

    /* 3. Lógica de Colores Activos */
    table.dataTable thead th.sorting_asc::before {
        color: black !important;
    }

    table.dataTable thead th.sorting_desc::after {
        color: black !important;
    }

    /* Opcional: Hover */
    table.dataTable thead th:hover::before,
    table.dataTable thead th:hover::after {
        color: #999;
    }

    table.dataTable thead th.sorting_asc:hover::before {
        color: black !important;
    }

    table.dataTable thead th.sorting_desc:hover::after {
        color: black !important;
    }
    table.dataTable thead th:last-child::before,
    table.dataTable thead th:last-child::after {
        display: none !important;
        content: none !important;
    }
   
    table.dataTable thead th:last-child {
        padding-right: 8px !important;
    }

</style>

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <h2 class="fw-bold" style="color: var(--uisek-blue);">
        <i class="fas fa-tasks me-2"></i>Listado de Actividades
    </h2>

    <div class="d-flex gap-2">
        <a asp-action="VerificarSistema" class="btn btn-light text-muted border shadow-sm rounded-pill" title="Verificar estado del servidor">
            <i class="fas fa-server"></i> <span class="d-none d-md-inline">Sistema</span>
        </a>

        <button onclick="exportarExcel()" class="btn btn-outline-success rounded-pill shadow-sm" title="Descargar reporte">
            <i class="fas fa-file-excel me-2"></i>Exportar
        </button>

        <button onclick="leerTabla()" class="btn btn-outline-primary rounded-pill shadow-sm" style="border-color: var(--uisek-blue); color: var(--uisek-blue);" title="Leer contenido en voz alta">
            <i class="fas fa-volume-up me-2"></i>Voz
        </button>

        <a asp-action="Crear" class="btn btn-primary rounded-pill shadow-sm px-4" style="background-color: var(--uisek-blue); border-color: var(--uisek-blue);">
            <i class="fas fa-plus me-2"></i>Nueva
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-container animate__animated animate__fadeIn">
            <table class="table table-hover table-elegant" id="tablaActividades">
                <thead class="table-light">
                    <tr>
                        <th>Código</th>
                        <th>Actividad</th>

                        <th>Fecha</th>
                        <th>Cupo</th>
                        <th>Responsable</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-muted">@item.Codigo</td>
                            <td>

                                <div class="fw-bold text-dark">@item.Nombre</div>
                                <small class="text-muted">@item.TipoDiscapacidad</small>
                            </td>
                            <td>@item.FechaRealizacion.ToShortDateString()</td>

                            <td>
                                <span class="badge bg-light text-dark border">
                                    <i class="fas fa-users me-1"></i>@item.Cupo
                                </span>
                            </td>
                            <td>@item.Responsable</td>
                            <td>
                                @if (item.Estado == "Activo")
                                {

                                    <span class="badge bg-success rounded-pill">Activo</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary rounded-pill">@item.Estado</span>
                                }
                            </td>
                            <td class="text-end">

                                <a asp-action="Editar" asp-route-id="@item.Codigo" class="btn btn-sm btn-outline-primary rounded-circle" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <form asp-action="Eliminar" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar la actividad @item.Nombre?');">
                                    <input type="hidden" name="codigo" value="@item.Codigo" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" title="Eliminar">

                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>

    <script>
        // 1. Configuración de DataTables
        jQuery(document).ready(function($) {
            var table = $('#tablaActividades').DataTable({
                "pageLength": 10,
                "lengthChange": true,
                "ordering": true,
                "order": [[ 2, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 6 } 
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                "dom": "<'row mb-3'<'col-md-6'f><'col-md-6 text-end'>>" +
                       "<'row'<'col-sm-12'tr>>" +
                       "<'row mt-3'<'col-md-5'i><'col-md-7'p>>"
            });
        });

        // 2. Funciones Globales
        function exportarExcel() {
            var tabla = document.getElementById("tablaActividades");
            var wb = XLSX.utils.table_to_book(tabla, {sheet: "Actividades"});
            XLSX.writeFile(wb, 'Reporte_Actividades.xlsx');
        }

        function leerTabla() {
            window.speechSynthesis.cancel();

            var mensaje = new SpeechSynthesisUtterance();
            mensaje.lang = 'es-LA';
            mensaje.rate = 1;

            var visibleRows = document.querySelectorAll('#tablaActividades tbody tr');
            var texto = "Iniciando lectura de actividades. ";

            if (visibleRows.length === 0) {
                texto = "No hay actividades visibles en la tabla.";
            } else {
                var limite = Math.min(5, visibleRows.length);
                for(var i=0; i < limite; i++) {
                    var celdas = visibleRows[i].getElementsByTagName('td');
                    if(celdas.length > 1) {
                        var nombre = celdas[1].innerText.replace(/(\r\n|\n|\r)/gm, " ");
                        var responsable = celdas[4].innerText;
                        texto += "Actividad: " + nombre + ", responsable: " + responsable + ". ";
                    }
                }
            }

            mensaje.text = texto;
            window.speechSynthesis.speak(mensaje);
        }
    </script>
}