@model IEnumerable<SistemaWeb.Models.Actividad>

@{
    ViewData["Title"] = "Actividades";
}

<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 30px; margin-bottom: 20px;">
        <h1 style="font-weight: 300; color: white;">Listado de Actividades</h1>
        <a asp-action="Crear" class="btn-excel">+ Nueva Actividad</a>
    </div>

    <div class="table-responsive">
        <table class="excel-table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Cupo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td style="font-family: monospace; color: #88c0d0;">@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td>@item.FechaRealizacion.ToShortDateString()</td>
                    <td>@item.Cupo</td>
                    <td>
                        <span style="padding: 4px 8px; border-radius: 4px; background-color: @(item.Estado == "Activo" ? "rgba(16, 124, 65, 0.2)" : "rgba(200, 0, 0, 0.2)"); color: @(item.Estado == "Activo" ? "#4cd964" : "#ff5c5c"); font-size: 0.85rem;">
                            @item.Estado
                        </span>
                    </td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Codigo" style="color: #4ea8de; margin-right: 10px;">Editar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>