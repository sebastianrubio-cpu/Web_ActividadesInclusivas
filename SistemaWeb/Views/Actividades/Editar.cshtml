@model SistemaWeb.Models.Actividad

@{
    ViewData["Title"] = "Editar Actividad";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="minimal-card">
        <h2 class="minimal-title">✏️ Editar Actividad</h2>

        <form asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label class="control-label fw-bold">Código Único</label>
                <input asp-for="Codigo" class="form-control" disabled style="opacity: 0.6; cursor: not-allowed;" />
            </div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label fw-bold">Nombre de la actividad</label>
                <input asp-for="Nombre" class="form-control" placeholder="Escribe el nombre..." />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label fw-bold">📍 Campus / Ubicación</label>
                <select id="selectLugar" class="form-control" style="cursor: pointer;">
                    <option value="">-- Seleccione un Campus --</option>
                    <option value="FelipeSegovia" data-lat="-0.19047870866644473" data-lng="-78.49058597462638">Felipe Segovia</option>
                    <option value="MiguelCervantes" data-lat="-0.09162242580716055" data-lng="-78.48439227687655">Miguel de Cervantes</option>
                    <option value="Guapulo" data-lat="-0.20002172092048476" data-lng="-78.47543024813045">Guápulo</option>
                </select>
                <small class="text-muted">Esto ubicará la actividad automáticamente en el mapa.</small>
            </div>

            <input type="hidden" asp-for="Latitud" id="latitudInput" />
            <input type="hidden" asp-for="Longitud" id="longitudInput" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FechaRealizacion" class="control-label fw-bold">📅 Fecha del evento</label>
                        <input asp-for="FechaRealizacion" type="date" class="form-control" onclick="this.showPicker()" />
                        <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Cupo" class="control-label fw-bold">👥 Cupo</label>
                        <input asp-for="Cupo" type="number" class="form-control" />
                        <span asp-validation-for="Cupo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TipoDiscapacidad" class="control-label fw-bold">Enfoque (Discapacidad)</label>
                <input asp-for="TipoDiscapacidad" class="form-control" placeholder="Ej: Visual, Motriz..." />
                <span asp-validation-for="TipoDiscapacidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Responsable" class="control-label fw-bold">Responsable</label>
                <input asp-for="Responsable" class="form-control" />
                <span asp-validation-for="Responsable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label fw-bold">Estado Actual</label>
                <select asp-for="Estado" class="form-control" style="cursor: pointer;">
                    <option value="Activo">🟢 Activo</option>
                    <option value="Inactivo">🔴 Inactivo</option>
                    <option value="Finalizado">⚪ Finalizado</option>
                </select>
            </div>

            <div class="text-center" style="margin-top: 40px;">
                <button type="submit" class="btn-excel" style="width: auto; padding: 12px 40px;">Guardar Cambios</button>
                <div style="margin-top: 15px;">
                    <a asp-action="Index" class="btn-secondary-min">Cancelar y Volver</a>
                </div>
            </div>
        </form>

        <hr class="my-5" style="border-color: #444;" />
        <div class="text-center">
            <p class="text-muted small">¿Deseas eliminar permanentemente esta actividad?</p>
            <form asp-action="Eliminar" method="post" onsubmit="return confirm('⚠️ ¿Estás SEGURO de eliminar esta actividad? Esta acción no se puede deshacer.');">
                <input type="hidden" name="id" value="@Model.Codigo" />
                <button type="submit" class="btn btn-outline-danger btn-sm px-4 rounded-pill">
                    🗑️ Eliminar Actividad
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Actualizar coordenadas al cambiar el lugar
        document.getElementById('selectLugar').addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];

            if (selectedOption.value !== "") {
                document.getElementById('latitudInput').value = selectedOption.getAttribute('data-lat');
                document.getElementById('longitudInput').value = selectedOption.getAttribute('data-lng');
            }
        });

        // Pre-seleccionar el campus correcto al cargar la página basado en las coordenadas guardadas
        window.addEventListener('load', function() {
            var lat = "@Model.Latitud".replace(',', '.'); // Asegurar formato decimal
            var lng = "@Model.Longitud".replace(',', '.');
            var select = document.getElementById('selectLugar');

            for (var i = 0; i < select.options.length; i++) {
                var optLat = select.options[i].getAttribute('data-lat');
                var optLng = select.options[i].getAttribute('data-lng');

                if (optLat === lat && optLng === lng) {
                    select.selectedIndex = i;
                    break;
                }
            }
        });
    </script>
}