@model SistemaWeb.Models.Actividad

@{
    ViewData["Title"] = "Editar Actividad";
}

<div class="minimal-card">
    <h2 class="minimal-title">Editar Actividad</h2>

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

        <input type="hidden" asp-for="Codigo" />

        <div class="form-group">
            <label class="control-label">Código Único</label>
            <input asp-for="Codigo" class="form-control" disabled style="opacity: 0.5; cursor: not-allowed;" />
        </div>

        <div class="form-group">
            <label asp-for="Nombre" class="control-label">Nombre de la actividad</label>
            <input asp-for="Nombre" class="form-control" placeholder="Escribe el nombre..." />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FechaRealizacion" class="control-label">📅 Fecha del evento</label>
                    <input asp-for="FechaRealizacion" type="date" class="form-control" onclick="this.showPicker()" />
                    <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
                    <small style="color: #444; font-size: 0.75rem; margin-top: 5px; display: block;">Toca para abrir calendario</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cupo" class="control-label">👥 Cupo</label>
                    <input asp-for="Cupo" type="number" class="form-control" />
                    <span asp-validation-for="Cupo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TipoDiscapacidad" class="control-label">Enfoque (Discapacidad)</label>
            <input asp-for="TipoDiscapacidad" class="form-control" placeholder="Ej: Visual, Motriz..." />
            <span asp-validation-for="TipoDiscapacidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Responsable" class="control-label">Responsable</label>
            <input asp-for="Responsable" class="form-control" />
            <span asp-validation-for="Responsable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Estado" class="control-label">Estado Actual</label>
            <select asp-for="Estado" class="form-control" style="cursor: pointer;">
                <option value="Activo">🟢 Activo</option>
                <option value="Inactivo">🔴 Inactivo</option>
            </select>
        </div>

        <div style="margin-top: 50px; text-align: center;">
            <input type="submit" value="Guardar Cambios" class="btn-excel" />
            <div style="margin-top: 15px;">
                <a asp-action="Index" class="btn-secondary-min">Cancelar y Volver</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}