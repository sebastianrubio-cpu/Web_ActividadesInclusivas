@model SistemaWeb.Models.Actividad

@{
    ViewData["Title"] = "Editar Actividad";
}

<style>
    body {
        background-image: url('/img/br.jpg') !important;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .modern-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 12px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
            transform: translateY(-2px);
        }

    .btn-custom-primary {
        width: 100%;
        border-radius: 10px;
        padding: 12px;
        font-weight: bold;
        transition: transform 0.2s;
    }

        .btn-custom-primary:hover {
            transform: scale(1.02);
        }
</style>

<div class="modern-container">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Editar Actividad</h2>
        <p class="text-muted">Modifique los datos necesarios</p>
    </div>

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Codigo" class="form-label fw-bold">Código</label>
            <input asp-for="Codigo" class="form-control bg-light" readonly />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaRealizacion" class="form-label fw-bold">Fecha</label>
            <input asp-for="FechaRealizacion" class="form-control" />
            <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label fw-bold">Responsable</label>
            <select asp-for="IdResponsable" class="form-select" required>
                <option value="">-- Seleccione --</option>
                @if (ViewBag.ListaProfesores != null)
                {
                    foreach (var prof in ViewBag.ListaProfesores)
                    {
                        <option value="@prof.IdUsuario">@prof.Nombre (@prof.Correo)</option>
                    }
                }
            </select>
            <span asp-validation-for="IdResponsable" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Cupo" class="form-label fw-bold">Cupo</label>
                <input asp-for="Cupo" class="form-control" type="number" />
                <span asp-validation-for="Cupo" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                <select asp-for="Estado" class="form-select">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                    <option value="Finalizado">Finalizado</option>
                    <option value="Lleno">Lleno</option>
                </select>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TipoDiscapacidad" class="form-label fw-bold">Inclusión</label>
            <select asp-for="TipoDiscapacidad" class="form-select">
                <option value="Ninguna">Ninguna</option>
                <option value="Motriz">Motriz</option>
                <option value="Visual">Visual</option>
                <option value="Auditiva">Auditiva</option>
                <option value="Intelectual">Intelectual</option>
            </select>
        </div>

        <div class="form-group mb-4">
            <label class="form-label fw-bold">Ubicación</label>
            <select id="UbicacionSelect" class="form-select" onchange="actualizarCoordenadas()">
                <option value="">-- Otra / Personalizada --</option>
                <option value="-0.09140617873589534,-78.4840387474237">Miguel de Cervantes</option>
                <option value="-0.19066184443918271,-78.49051741510313">Felipe Segovia</option>
                <option value="-0.08850952965507608,-78.4793601930223">Parque Einstein</option>
                <option value="-0.19991051428662168,-78.47553834876912">Guapulo</option>
                <option value="-0.14076380797690877,-78.48807062587358">Bicentenario</option>
            </select>
        </div>

        <input type="hidden" asp-for="Latitud" id="Latitud" />
        <input type="hidden" asp-for="Longitud" id="Longitud" />

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-custom-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 10px;">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función para actualizar los inputs ocultos
        function actualizarCoordenadas() {
            var select = document.getElementById("UbicacionSelect");
            var valor = select.value;
            if (valor) {
                var coords = valor.split(',');
                document.getElementById("Latitud").value = coords[0];
                document.getElementById("Longitud").value = coords[1];
            }
        }

        // Lógica para pre-seleccionar la ubicación correcta al cargar la página
        document.addEventListener("DOMContentLoaded", function() {
            var lat = document.getElementById("Latitud").value.replace(',', '.'); // Asegurar formato decimal punto
            var lon = document.getElementById("Longitud").value.replace(',', '.');

            // Reconstruimos el string buscado (ej: "-0.09... , -78.48...")
            // Ojo: Javascript puede variar precisión, comparamos aproximado o string directo si viene exacto.
            // Para asegurar compatibilidad con lo guardado en los values del select:

            var select = document.getElementById("UbicacionSelect");
            var options = select.options;

            for (var i = 0; i < options.length; i++) {
                // Verificamos si el value contiene la latitud (simple check)
                if (options[i].value.includes(lat) && options[i].value.includes(lon)) {
                    select.selectedIndex = i;
                    break;
                }
            }
        });
    </script>
}