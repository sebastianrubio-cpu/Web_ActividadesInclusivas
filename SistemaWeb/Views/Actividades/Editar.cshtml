@model SistemaWeb.Models.Actividad

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Actividad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: white;
            display: flex;
            justify-content: center;
            padding-top: 50px;
        }</style>
</head>
<body>
    <div class="container" style="max-width: 800px;">
        <div class="card shadow p-4">
            <h3 class="text-primary mb-4">✏️ Editar Actividad</h3>

            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Código (No editable)</label>
                    @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control bg-light", @readonly = "readonly" })
                </div>

                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark fw-bold">Fecha</label>
                        @Html.TextBoxFor(m => m.FechaRealizacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark fw-bold">Lugar</label>
                        @Html.TextBoxFor(m => m.Lugar, new { @class = "form-control" })
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-dark fw-bold">Descripción</label>
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label text-dark fw-bold">Enfoque</label>
                        @Html.TextBoxFor(m => m.TipoDiscapacidad, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label text-dark fw-bold">Cupo</label>
                        @Html.TextBoxFor(m => m.Cupo, new { @class = "form-control", type = "number" })
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label text-dark fw-bold">Responsable</label>
                        @Html.TextBoxFor(m => m.Responsable, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-check mb-4">
                    @Html.CheckBoxFor(m => m.Estado, new { @class = "form-check-input" })
                    <label class="form-check-label text-dark">Activo</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-2">💾 Guardar Cambios</button>
                <a href="/Actividades" class="btn btn-secondary w-100">Cancelar</a>
            }
        </div>
    </div>
</body>
</html>