@model SistemaWeb.Models.Actividad

@{
    ViewData["Title"] = "Editar Actividad";
}

<h1>Editar Actividad</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Codigo" />

            <div class="form-group mb-3">
                <label class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control" disabled />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaRealizacion" class="control-label">Fecha Realización</label>
                <input asp-for="FechaRealizacion" type="date" class="form-control" />
                <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoDiscapacidad" class="control-label">Tipo Discapacidad</label>
                <input asp-for="TipoDiscapacidad" class="form-control" />
                <span asp-validation-for="TipoDiscapacidad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cupo" class="control-label">Cupo</label>
                <input asp-for="Cupo" type="number" class="form-control" />
                <span asp-validation-for="Cupo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Responsable" class="control-label">Responsable</label>
                <input asp-for="Responsable" class="form-control" />
                <span asp-validation-for="Responsable" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label">Estado</label>
                <select asp-for="Estado" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}