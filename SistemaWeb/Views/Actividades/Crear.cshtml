@model SistemaWeb.Models.Actividad

@{
    ViewData["Title"] = "Crear Actividad";
}

<style>
    /* Forzamos el fondo de imagen cubriendo toda la pantalla */
    body {
        background-image: url('/img/br.jpg') !important;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    /* Contenedor tipo "Card" centrado */
    .modern-container {
        max-width: 600px;
        margin: 50px auto; /* Centrado horizontal y margen superior */
        background-color: rgba(255, 255, 255, 0.95); /* Blanco con ligera transparencia */
        padding: 40px;
        border-radius: 20px; /* Bordes redondeados */
        box-shadow: 0 10px 25px rgba(0,0,0,0.2); /* Sombra elegante */
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 12px;
        transition: all 0.3s ease-in-out; /* Animación suave */
    }

        /* Animación al enfocar inputs */
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
            transform: translateY(-2px);
        }

    .btn-custom-primary {
        width: 100%;
        border-radius: 10px;
        padding: 12px;
        font-weight: bold;
        transition: transform 0.2s;
    }

        .btn-custom-primary:hover {
            transform: scale(1.02);
        }
</style>

<div class="modern-container">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Nueva Actividad</h2>
        <p class="text-muted">Complete la información para registrar una actividad</p>
    </div>

    <form asp-action="Crear">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Codigo" class="form-label fw-bold">Código</label>
            <input asp-for="Codigo" class="form-control" placeholder="Ej: A001" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label fw-bold">Nombre de la Actividad</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre descriptivo" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaRealizacion" class="form-label fw-bold">Fecha de Realización</label>
            <input asp-for="FechaRealizacion" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label fw-bold">Responsable (Profesor)</label>
            <select asp-for="IdResponsable" class="form-select" required>
                <option value="">-- Seleccione un Profesor --</option>
                @if (ViewBag.ListaProfesores != null)
                {
                    foreach (var prof in ViewBag.ListaProfesores)
                    {
                        <option value="@prof.IdUsuario">@prof.Nombre (@prof.Correo)</option>
                    }
                }
            </select>
            <span asp-validation-for="IdResponsable" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Cupo" class="form-label fw-bold">Cupo Disponible</label>
            <input asp-for="Cupo" class="form-control" type="number" min="1" placeholder="0" />
            <span asp-validation-for="Cupo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TipoDiscapacidad" class="form-label fw-bold">Enfoque de Inclusión</label>
            <select asp-for="TipoDiscapacidad" class="form-select">
                <option value="Ninguna">General / Ninguna</option>
                <option value="Motriz">Discapacidad Motriz</option>
                <option value="Visual">Discapacidad Visual</option>
                <option value="Auditiva">Discapacidad Auditiva</option>
                <option value="Intelectual">Discapacidad Intelectual</option>
            </select>
            <span asp-validation-for="TipoDiscapacidad" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label class="form-label fw-bold">Ubicación del Evento</label>
            <select id="UbicacionSelect" class="form-select" onchange="actualizarCoordenadas()">
                <option value="">-- Seleccione un lugar --</option>
                <option value="-0.09140617873589534,-78.4840387474237">Miguel de Cervantes</option>
                <option value="-0.19066184443918271,-78.49051741510313">Felipe Segovia</option>
                <option value="-0.08850952965507608,-78.4793601930223">Parque Einstein</option>
                <option value="-0.19991051428662168,-78.47553834876912">Guapulo</option>
                <option value="-0.14076380797690877,-78.48807062587358">Bicentenario</option>
            </select>
            <small class="text-muted">Seleccione una ubicación predefinida.</small>
        </div>

        <input type="hidden" asp-for="Latitud" id="Latitud" />
        <input type="hidden" asp-for="Longitud" id="Longitud" />

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-custom-primary">Guardar Actividad</button>
            <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 10px;">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function actualizarCoordenadas() {
            var select = document.getElementById("UbicacionSelect");
            var valor = select.value;

            if (valor) {
                var coords = valor.split(',');
                document.getElementById("Latitud").value = coords[0];
                document.getElementById("Longitud").value = coords[1];
            }
        }
    </script>
}