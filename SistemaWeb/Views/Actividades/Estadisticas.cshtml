@{
    ViewData["Title"] = "Métricas del Sistema";
}

<div class="container mt-4 animate__animated animate__fadeIn">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color: var(--uisek-blue);">
            <i class="fas fa-chart-line me-2"></i>Dashboard de Impacto
        </h2>
        <span class="badge bg-secondary p-2">Vista de Administrador</span>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="p-3 rounded-4 shadow-sm border-start border-5 border-primary bg-white">
                <small class="text-muted text-uppercase fw-bold">Total Usuarios</small>
                <h2 class="fw-bold mb-0">@ViewBag.UsuarioTotal</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4 shadow-sm border-start border-5 border-info bg-white">
                <small class="text-muted text-uppercase fw-bold">Actividades Creadas</small>
                <h2 class="fw-bold mb-0">@ViewBag.TotalActividades</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4 shadow-sm border-start border-5 border-success bg-white">
                <small class="text-muted text-uppercase fw-bold">Cupos Ofertados</small>
                <h2 class="fw-bold mb-0">@ViewBag.TotalCupos</h2>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold">Distribución por Discapacidad</h5>
                    <small class="text-muted">Proporción de actividades según enfoque.</small>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center" style="position: relative; height: 300px;">
                    <canvas id="pieChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold">Oferta de Cupos (Expectativa)</h5>
                    <small class="text-muted">Total de cupos abiertos por categoría.</small>
                </div>
                <div class="card-body" style="position: relative; height: 300px;">
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // 1. OBTENER DATOS DEL SERVIDOR (ViewBag)
        // Usamos Html.Raw y Json.Serialize para convertir los arrays de C# a Arrays de JS
        const labelsJS = @Html.Raw(Json.Serialize(ViewBag.Labels));
        const dataCantidadJS = @Html.Raw(Json.Serialize(ViewBag.DataCantidad));
        const dataCuposJS = @Html.Raw(Json.Serialize(ViewBag.DataCupos));

        // Colores UISEK para los gráficos
        const colors = ['#002d5b', '#004a99', '#3b82f6', '#60a5fa', '#93c5fd'];

        // --- CONFIGURACIÓN GRÁFICO PASTEL ---
        const ctxPie = document.getElementById('pieChart').getContext('2d');
        new Chart(ctxPie, {
            type: 'doughnut', // Tipo 'Donut' es más moderno que 'Pie' simple
            data: {
                labels: labelsJS,
                datasets: [{
                    data: dataCantidadJS,
                    backgroundColor: colors,
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 20
                        },
                        // INTERACTIVIDAD: Chart.js permite por defecto ocultar datos al dar click en la leyenda
                        onClick: null // Mantiene el comportamiento default de filtrar
                    }
                }
            }
        });

        // --- CONFIGURACIÓN GRÁFICO BARRAS (EXPECTATIVA) ---
        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: labelsJS,
                datasets: [{
                    label: 'Cupos Totales (Expectativa)',
                    data: dataCuposJS,
                    backgroundColor: '#002d5b',
                    borderRadius: 5,
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { display: true, color: '#f0f0f0' }
                    },
                    x: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false } // Ocultamos leyenda en barras si es una sola serie
                }
            }
        });
    </script>
}