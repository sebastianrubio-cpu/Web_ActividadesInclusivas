<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UISEK Inclusiva</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        /* =========================================
                   1. CONFIGURACIÓN GLOBAL
                   ========================================= */
        :root {
            --uisek-blue: #002D72;
            --uisek-hover: #004a99;
            --text-nav: #4a4a4a;
            --bg-body: #f4f7f6;
            --nav-height: 80px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            padding-top: var(--nav-height);
        }

        /* MODO OSCURO */
        [data-theme="dark"] {
            --uisek-blue: #4d82cb;
            --uisek-hover: #6ea3e5;
            --text-nav: #e0e0e0;
            --bg-body: #121212;
        }

            [data-theme="dark"] body {
                background-color: var(--bg-body) !important;
                color: var(--text-nav);
            }

        /* =========================================
                   2. NAVBAR ANIMADO
                   ========================================= */
        .navbar-modern {
            height: var(--nav-height);
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            transition: all 0.4s ease;
            z-index: 1000;
        }

        [data-theme="dark"] .navbar-modern {
            background: rgba(30, 30, 30, 0.95);
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        /* LOGO */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            transition: transform 0.3s;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        /* =========================================
                   3. LINKS CON EFECTOS (Hover)
                   ========================================= */
        .nav-link-anim {
            color: var(--text-nav) !important;
            font-weight: 500;
            margin: 0 12px;
            position: relative;
            padding: 8px 0;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            /* Icono que rebota */
            .nav-link-anim i {
                transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            }

            .nav-link-anim:hover i {
                transform: translateY(-3px); /* Rebote hacia arriba */
                color: var(--uisek-blue);
            }

            /* Línea inferior expansiva */
            .nav-link-anim::after {
                content: '';
                position: absolute;
                width: 0;
                height: 3px;
                bottom: 0;
                left: 50%;
                background-color: var(--uisek-blue);
                transition: all 0.3s ease;
                border-radius: 2px;
                transform: translateX(-50%);
            }

            .nav-link-anim:hover {
                color: var(--uisek-blue) !important;
            }

                .nav-link-anim:hover::after {
                    width: 100%; /* Expande al 100% */
                }

        /* =========================================
                   4. BOTÓN ADMIN & ACCIONES
                   ========================================= */
        .btn-admin-glow {
            background: linear-gradient(135deg, var(--uisek-blue), var(--uisek-hover));
            color: white !important;
            border-radius: 50px;
            padding: 8px 20px;
            font-size: 0.9rem;
            box-shadow: 0 4px 15px rgba(0, 45, 114, 0.2);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

            .btn-admin-glow:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0, 45, 114, 0.4);
                color: white !important;
            }

        /* Toggle Theme & Logout */
        .action-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-nav);
            background: transparent;
            border: 1px solid transparent;
            transition: all 0.3s;
        }

            .action-icon:hover {
                background-color: rgba(0,0,0,0.05);
                color: var(--uisek-blue);
                transform: rotate(15deg);
            }

        [data-theme="dark"] .action-icon:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .text-danger-hover:hover {
            color: #dc3545 !important;
            background-color: rgba(220, 53, 69, 0.1);
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-modern fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Actividades" asp-action="Index">
                    <span style="color: var(--uisek-blue);">UISEK</span>
                    <span class="fw-light" style="font-size: 0.9em; opacity: 0.7;">| Inclusiva</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <i class="fas fa-bars" style="color: var(--text-nav);"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 align-items-center">

                        @if (!User.IsInRole("Estudiante"))
                        {
                            <li class="nav-item">
                                <a class="nav-link-anim" asp-controller="Actividades" asp-action="Index">
                                    <i class="far fa-calendar-alt"></i> Actividades
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Estudiante"))
                        {
                            <li class="nav-item">
                                <a class="nav-link-anim" asp-controller="Actividades" asp-action="VistaEstudiante">
                                    <i class="fas fa-graduation-cap"></i> Explorar
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link-anim" asp-controller="Actividades" asp-action="Mapa">
                                <i class="far fa-map"></i> Mapa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link-anim" asp-controller="Home" asp-action="Proyecto">
                                <i class="fas fa-rocket"></i> Proyecto
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Administrador") || User.IsInRole("Profesor")))
                        {
                            <li class="nav-item">
                                <a class="nav-link-anim" asp-controller="Actividades" asp-action="Estadisticas">
                                    <i class="fas fa-chart-pie"></i> Stats
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center gap-3">

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="btn-admin-glow" asp-controller="Usuarios" asp-action="Index">
                                    <i class="fas fa-users-cog"></i> Usuarios
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <button class="action-icon" id="themeToggle" title="Cambiar Tema">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>

                        <li class="nav-item">
                            <a class="action-icon text-danger-hover" asp-controller="Acceso" asp-action="Salir" title="Cerrar Sesión">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Lógica de Tema Oscuro
            const toggleBtn = document.getElementById('themeToggle');
            const icon = toggleBtn.querySelector('i');
            const body = document.body;

            const currentTheme = localStorage.getItem('theme');
            if (currentTheme === 'dark') {
                body.setAttribute('data-theme', 'dark');
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }

            toggleBtn.addEventListener('click', () => {
                if (body.getAttribute('data-theme') === 'dark') {
                    body.removeAttribute('data-theme');
                    localStorage.setItem('theme', 'light');
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                } else {
                    body.setAttribute('data-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>