<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UISEK Inclusiva</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Actividades" asp-action="Index">
                    <span style="color: var(--uisek-blue);">UISEK</span> <span class="text-muted fw-light">| Inclusiva</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-controller="Actividades" asp-action="Index">
                                <i class="fas fa-list-ul me-1"></i> Actividades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-controller="Home" asp-action="Proyecto">
                                <i class="fas fa-info-circle me-1"></i> El Proyecto
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">

                        <li class="nav-item me-3">
                            <a class="btn btn-outline-primary rounded-pill px-4" asp-controller="Apoyo" asp-action="ValidarCedula">
                                <i class="fas fa-search me-2"></i>Verificar Estudiante
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="Acceso" asp-action="Salir">
                                <i class="fas fa-sign-out-alt"></i> Salir
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>