@model SistemaWeb.Models.Usuario
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-plus"></i> Crear Nuevo Usuario</h4>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Crear" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="IdUsuario" class="form-control" placeholder="Cédula" required />
                    <label asp-for="IdUsuario">Cédula</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" required />
                    <label asp-for="Nombre">Nombre Completo</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Correo" class="form-control" type="email" placeholder="Correo" required />
                    <label asp-for="Correo">Correo Institucional</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Clave" class="form-control" type="password" placeholder="Contraseña" required />
                    <label asp-for="Clave">Contraseña</label>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Asignar Rol</label>
                        <select asp-for="IdRol" class="form-select" asp-items="ViewBag.Roles" required>
                            <option value="">-- Seleccione --</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Género</label>
                        <select asp-for="IdGenero" class="form-select" asp-items="ViewBag.Generos">
                            <option value="">-- Opcional --</option>
                        </select>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success fw-bold">Registrar Usuario</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>