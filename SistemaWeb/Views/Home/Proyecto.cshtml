@{
    ViewData["Title"] = "El Proyecto";
}

<div class="container py-5">

    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center animate__animated animate__fadeInDown">
            <h1 class="fw-bold display-5" style="color: var(--uisek-blue);">
                <i class="fas fa-rocket me-2"></i>Proyecto Inclusivo
            </h1>
            <p class="lead text-muted mt-3">
                Plataforma de gestión y vinculación con la comunidad de la UISEK.
            </p>
            <div style="height: 4px; width: 80px; background-color: var(--uisek-gold); margin: 20px auto; border-radius: 2px;"></div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 animate__animated animate__fadeInUp" style="border-radius: 20px; overflow: hidden;">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <span style="background-color: #eef2f7; padding: 20px; border-radius: 50%; color: var(--uisek-blue); font-size: 2.5rem;">
                            <i class="fas fa-hands-helping"></i>
                        </span>
                    </div>

                    <h3 class="fw-bold mb-4" style="color: var(--text-main);">¿De qué trata este proyecto?</h3>

                    <p class="text-muted" style="font-size: 1.1rem; line-height: 1.8;">
                        Este sistema permite gestionar de manera eficiente las
                        <strong>actividades de vinculación</strong> y proyectos sociales de la universidad.
                        Facilita a los estudiantes la inscripción, seguimiento y validación de su participación,
                        asegurando que el impacto en la comunidad sea medible y transparente.
                    </p>

                    <div class="row mt-5">
                        <div class="col-md-4 mb-3">
                            <h5 class="fw-bold" style="color: var(--uisek-blue);">
                                <i class="fas fa-check-circle me-1"></i> Inclusión
                            </h5>
                            <p class="small text-muted">Accesible para todos los estudiantes.</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h5 class="fw-bold" style="color: var(--uisek-blue);">
                                <i class="fas fa-network-wired me-1"></i> Conectividad
                            </h5>
                            <p class="small text-muted">Integración con sistemas UISEK.</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h5 class="fw-bold" style="color: var(--uisek-blue);">
                                <i class="fas fa-chart-line me-1"></i> Impacto
                            </h5>
                            <p class="small text-muted">Resultados medibles en tiempo real.</p>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Actividades" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm" style="background-color: var(--uisek-blue); border: none;">
                            Ver Actividades Disponibles
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>