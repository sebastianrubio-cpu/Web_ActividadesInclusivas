@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // No usamos el layout estándar para tener control total del fondo
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - UISEK Inclusiva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="login-body">

    <div class="login-card animate__animated animate__fadeInUp">
        <div class="mb-4">
            <img src="https://uisek.edu.ec/wp-content/uploads/2022/09/Logo-UISEK-2022.png" alt="UISEK Logo" style="width: 180px;">
        </div>

        <h4 class="fw-bold text-dark mb-1">Bienvenido</h4>
        <p class="text-muted mb-4">Gestión de Actividades Inclusivas</p>

        <form asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <input type="email" name="correo" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput">Correo Institucional</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" name="clave" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label for="floatingPassword">Contraseña</label>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-start py-2" role="alert">
                    <small><i class="fas fa-exclamation-circle me-1"></i> @ViewBag.Error</small>
                </div>
            }

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-uisek btn-lg">INGRESAR</button>
            </div>
        </form>

        <div class="mt-4">
            <small class="text-muted">&copy; 2026 Universidad Internacional SEK</small>
        </div>
    </div>

</body>
</html>