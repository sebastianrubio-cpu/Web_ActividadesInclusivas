@model SistemaWeb.Models.Usuario

@{
    ViewData["Title"] = "Acceso Institucional";
    Layout = null;

    // Verificamos si hay que mantener abierto el panel de registro (por error)
    bool mostrarRegistro = ViewData["MostrarRegistro"] as bool? == true;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Acceso - Sistema UISEK</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* --- ESTILOS PREVIOS (EXACTAMENTE IGUALES) --- */
        :root {
            --uisek-blue: #002d5b;
            --uisek-light-blue: #004a99;
            --uisek-gold: #d4af37;
            --bg-body: #eceff1;
            --bg-panel: #ffffff;
            --text-main: #1a252f;
            --text-secondary: #757575;
            --primary-gradient: linear-gradient(135deg, var(--uisek-blue) 0%, var(--uisek-light-blue) 100%);
            --shadow: 0 20px 40px rgba(0, 45, 91, 0.2);
        }

        body {
            background-color: var(--bg-body);
            background-image: url(/img/br.jpg); /* Asegúrate de que esta imagen exista */
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover;
            background-attachment: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: 'Montserrat', sans-serif;
            height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .container {
            background-color: var(--bg-panel);
            border-radius: 20px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            width: 900px;
            max-width: 100%;
            min-height: 650px;
            transition: all 0.5s ease;
        }

        form {
            background-color: var(--bg-panel);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 50px;
            height: 100%;
            text-align: center;
            transition: all 0.5s ease;
        }

        h1 {
            font-weight: 800;
            margin: 0 0 20px 0;
            color: var(--uisek-blue);
            font-size: 32px;
            letter-spacing: -1px;
            position: relative;
        }

        form h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background-color: var(--uisek-gold);
            border-radius: 2px;
        }

        span {
            font-size: 13px;
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 20px;
            display: block;
        }

        input, select {
            background-color: #f4f7f9;
            border: 2px solid #e0e6ed;
            padding: 12px 15px;
            margin: 8px 0;
            width: 100%;
            border-radius: 10px;
            outline: none;
            transition: all 0.3s;
            color: var(--text-main);
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
        }

            input::placeholder {
                color: #a0aec0;
                font-weight: 400;
            }

            input:focus, select:focus {
                border-color: var(--uisek-blue);
                background-color: #fff;
                box-shadow: 0 5px 15px rgba(0, 45, 91, 0.1);
            }

        button {
            border-radius: 10px;
            border: none;
            background: var(--primary-gradient);
            color: #FFFFFF;
            font-size: 14px;
            font-weight: 700;
            padding: 15px 50px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 80ms ease-in, box-shadow 0.3s;
            cursor: pointer;
            margin-top: 25px;
            font-family: 'Montserrat', sans-serif;
        }

            button:active {
                transform: scale(0.98);
            }

            button:hover {
                box-shadow: 0 10px 20px rgba(0, 45, 91, 0.4);
            }

        .icon-uisek {
            color: var(--uisek-blue);
            font-size: 3rem;
            margin-bottom: 20px;
        }

        a.forgot-pass {
            color: var(--text-secondary);
            font-size: 14px;
            font-weight: 600;
            margin-top: 20px;
            text-decoration: none;
            border-bottom: 2px solid transparent;
            transition: all 0.3s;
            cursor: pointer;
        }

            a.forgot-pass:hover {
                color: var(--uisek-gold);
                border-bottom-color: var(--uisek-gold);
            }

        .overlay-panel h1 {
            color: #FFFFFF;
            font-size: 36px;
            text-shadow: 0 2px 5px rgba(0,0,0,0.3);
            margin-bottom: 15px;
        }

            .overlay-panel h1::after {
                display: none;
            }

        .overlay-panel p {
            font-size: 16px;
            font-weight: 500;
            line-height: 1.6;
            margin: 20px 0 30px;
            color: #e6efff;
            max-width: 85%;
        }

        button.ghost {
            background: transparent;
            border: 2px solid #FFFFFF;
            color: #FFFFFF;
            font-weight: 800;
        }

            button.ghost:hover {
                background: #FFFFFF;
                color: var(--uisek-blue);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            transition: all 0.6s ease-in-out;
        }

        .sign-in-container {
            left: 0;
            width: 50%;
            z-index: 2;
        }

        .sign-up-container {
            left: 0;
            width: 50%;
            opacity: 0;
            z-index: 1;
        }

        .container.right-panel-active .sign-in-container {
            transform: translateX(100%);
        }

        .container.right-panel-active .sign-up-container {
            transform: translateX(100%);
            opacity: 1;
            z-index: 5;
            animation: show 0.6s;
        }

        @@keyframes show {
            0%, 49.99% {
                opacity: 0;
                z-index: 1;
            }

            50%, 100% {
                opacity: 1;
                z-index: 5;
            }
        }

        .overlay-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            z-index: 100;
        }

        .container.right-panel-active .overlay-container {
            transform: translateX(-100%);
        }

        .overlay {
            background: var(--primary-gradient);
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 0 0;
            color: #FFFFFF;
            position: relative;
            left: -100%;
            height: 100%;
            width: 200%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .container.right-panel-active .overlay {
            transform: translateX(50%);
        }

        .overlay-panel {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 30px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 50%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .overlay-left {
            transform: translateX(-20%);
            padding-right: 80px;
            padding-left: 30px;
        }

        .container.right-panel-active .overlay-left {
            transform: translateX(0);
        }

        .overlay-right {
            right: 0;
            transform: translateX(0);
            padding-left: 80px;
            padding-right: 30px;
        }

        .container.right-panel-active .overlay-right {
            transform: translateX(20%);
        }

        /* --- ESTILOS DEL MODAL (POP-UP) --- */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal-content {
            background: white;
            padding: 40px;
            border-radius: 15px;
            width: 400px;
            text-align: center;
            box-shadow: 0 15px 30px rgba(0,0,0,0.3);
            transform: translateY(-20px);
            transition: all 0.3s ease;
            position: relative;
        }

        .modal-overlay.active .modal-content {
            transform: translateY(0);
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 24px;
            cursor: pointer;
            color: #888;
        }

        /* Alertas */
        .alert-custom {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            font-weight: 600;
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 3000;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .alert-success {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

    </style>
</head>
<body>

    @if (TempData["ExitoRecuperacion"] != null)
    {
        <div class="alert-custom alert-success">
            <i class="fas fa-check-circle"></i> @TempData["ExitoRecuperacion"]
        </div>
    }
    @if (TempData["ErrorRecuperacion"] != null)
    {
        <div class="alert-custom alert-error">
            <i class="fas fa-times-circle"></i> @TempData["ErrorRecuperacion"]
        </div>
    }

    <div class="container" id="container">

        <div class="form-container sign-up-container">
            <form action="@Url.Action("Registrar", "Acceso")" method="post">
                <h1>Crear Cuenta</h1>
                <span>Use su correo institucional (@@uisek.edu.ec)</span>

                <input type="text" name="IdUsuario" placeholder="Cédula de Identidad" required maxlength="15" />
                <input type="text" name="Nombre" placeholder="Nombre Completo" required />
                <input type="email" name="Correo" placeholder="Correo Electrónico" required />
                <input type="password" name="Clave" placeholder="Contraseña" required />

                <select name="IdGenero" required>
                    <option value="" disabled selected>Seleccione su Género</option>
                    <option value="0">Masculino</option>
                    <option value="1">Femenino</option>
                    <option value="2">No Binario</option>
                </select>

                <div style="font-size: 11px; color: #666; margin-bottom: 10px;">
                    * Mínimo 8 caracteres, 1 Mayúscula, 1 Símbolo.
                </div>

                <button type="submit">Registrarse</button>

                @if (ViewData["ErrorRegistro"] != null)
                {
                    <div style="color: #d32f2f; font-size: 12px; margin-top: 10px; font-weight: bold;">
                        <i class="fas fa-exclamation-triangle"></i> @ViewData["ErrorRegistro"]
                    </div>
                }
            </form>
        </div>

        <div class="form-container sign-in-container">
            <form action="@Url.Action("Login", "Acceso")" method="post">
                <i class="fas fa-university icon-uisek"></i>

                <h1>Acceso UISEK</h1>
                <span>Sistema de Actividades Inclusivas</span>

                <input type="email" name="Correo" placeholder="Correo Institucional" required />
                <input type="password" name="Clave" placeholder="Contraseña" required />

                <a onclick="openModal()" class="forgot-pass">
                    ¿Olvidó su contraseña?
                </a>

                <button type="submit">Ingresar</button>

                @if (ViewData["Error"] != null)
                {
                    <div style="color: #d32f2f; font-size: 13px; margin-top: 15px; font-weight:700; background: #ffebee; padding: 10px; border-radius: 8px; width: 100%;">
                        <i class="fas fa-exclamation-circle"></i> @ViewData["Error"]
                    </div>
                }

                @if (ViewData["Exito"] != null)
                {
                    <div style="color: #166534; font-size: 13px; margin-top: 15px; font-weight:700; background: #dcfce7; padding: 10px; border-radius: 8px; width: 100%;">
                        <i class="fas fa-check"></i> @ViewData["Exito"]
                    </div>
                }
            </form>
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>¡Bienvenido de Nuevo!</h1>
                    <p>Si ya es parte de nuestra comunidad, inicie sesión para gestionar sus actividades.</p>
                    <button class="ghost" id="signIn">INICIAR SESIÓN</button>
                </div>

                <div class="overlay-panel overlay-right">
                    <h1>Comunidad UISEK</h1>
                    <p>Únase a la plataforma oficial de gestión de actividades y vinculación.</p>
                    <button class="ghost" id="signUp">REGISTRARSE</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-overlay" id="modalRecuperar">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal()">&times;</span>
            <i class="fas fa-envelope-open-text" style="font-size: 40px; color: var(--uisek-gold); margin-bottom: 15px;"></i>
            <h2 style="color: var(--uisek-blue); margin-bottom: 10px;">Recuperar Clave</h2>
            <p style="font-size: 13px; color: #666; margin-bottom: 20px;">
                Ingrese el correo electrónico asociado a su cuenta. Le enviaremos su contraseña actual.
            </p>

            <form action="@Url.Action("RecuperarClave", "Acceso")" method="post" style="padding: 0; background: transparent;">
                <input type="email" name="correoRecuperacion" placeholder="Su correo institucional" required />
                <button type="submit" style="margin-top: 15px; width: 100%;">Enviar Correo</button>
            </form>
        </div>
    </div>

    <script>
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        // Lógica del Slider
        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });

        // IMPORTANTE: Si hubo un error en el registro (ViewData["MostrarRegistro"] es true),
        // abrimos automáticamente el panel de registro al cargar la página.
        var mostrarRegistro = '@(mostrarRegistro)';
        if (mostrarRegistro === 'True') {
            container.classList.add("right-panel-active");
        }

        // Lógica del Modal
        function openModal() {
            document.getElementById('modalRecuperar').classList.add('active');
        }

        function closeModal() {
            document.getElementById('modalRecuperar').classList.remove('active');
        }

        window.onclick = function(event) {
            const modal = document.getElementById('modalRecuperar');
            if (event.target == modal) {
                closeModal();
            }
        }

        // Desaparecer alertas
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-custom');
            alerts.forEach(alert => alert.style.display = 'none');
        }, 5000);
    </script>
</body>
</html>